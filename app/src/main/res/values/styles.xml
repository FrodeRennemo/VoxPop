<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_base</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/app_darker</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/app_accent</item>

        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBarShadow" parent="@style/AppTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>



    <style name="AppTheme.NoActionbar" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SlidingTab">
        <item name="android:background">@color/app_base_trans</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="Button">
        <item name="android:background">@color/app_accent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
