<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_base</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/app_darker</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/app_accent</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/app_base</item>

    </style>

</resources>
